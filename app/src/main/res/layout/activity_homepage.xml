<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.base.xiaopa.activitys.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <cn.bingoogolapple.bgabanner.BGABanner
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/banner"
            app:banner_pageChangeDuration="1000"
            app:banner_pointAutoPlayAble="true"
            app:banner_pointContainerBackground="@android:color/transparent"
            app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
            android:background="@drawable/shape_eidt"
            app:banner_transitionEffect="rotate"
            />
        <FrameLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/class_party"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.02"
                android:background="@drawable/shape_eidt"
                android:drawableLeft="@drawable/myclass"
                android:gravity="center_vertical"
                android:text="班级联谊"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_button"
                android:text="查看详情" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shape_eidt">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/class_bg" />

            <TextView
                android:id="@+id/class_summary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/ClassSumarry"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/assn_party"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:background="@drawable/shape_eidt"
                android:drawableLeft="@drawable/assn"
                android:gravity="center_vertical"
                android:text="社团聚会"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_button"
                android:text="查看详情" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shape_eidt">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/assn_bg" />

            <TextView
                android:id="@+id/assn_summary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/AssnSumarry"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/personal_party"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:background="@drawable/shape_eidt"
                android:drawableLeft="@drawable/personal"
                android:gravity="center_vertical"
                android:text="个人交友"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="2dp"
                android:background="@drawable/shape_button"
                android:text="查看详情" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/shape_eidt">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="113dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/personal_bg" />

            <TextView
                android:id="@+id/personal_summary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="left|center"
                android:text="@string/PersonalSumarry"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

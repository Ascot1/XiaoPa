<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="150dp"
android:layout_height="wrap_content"
android:background="#FFFFFF"
android:layout_marginBottom="8dp"
android:layout_marginLeft="20dp"
android:layout_marginRight="4dp"
android:orientation="vertical"

    >
<LinearLayout
    android:layout_width="100dp"
    android:layout_height="20dp">
    <TextView
        android:id="@+id/clock_hour"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="12"
        android:background="@drawable/rdaojishi_background"
        android:textColor="#FFFFFF"
        />
    <TextView

        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text=":"
        android:textColor="#E60012"
        />
    <TextView
        android:id="@+id/clock_minutes"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="50"
        android:background="@drawable/rdaojishi_background"
        android:textColor="#FFFFFF"
        android:gravity="center"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text=":"
        android:gravity="center"
        android:textColor="#E60012"
        />
    <TextView
        android:id="@+id/clock_second"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/rdaojishi_background"
        android:textColor="#FFFFFF"
        android:text="40"
        android:gravity="center"
        />

</LinearLayout>
<ImageView
    android:id="@+id/xshead"
    android:layout_width="120dp"
    android:layout_height="100dp"
    android:background="@drawable/xianshiqianggou1"

    />
<TextView
    android:id="@+id/xsyprice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="原价 : ￥4.8"
    android:textColor="#979797"
    />
    <TextView
        android:id="@+id/xsxprice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="现价 : ￥2 "
        android:textColor="#E60012"
        />

</LinearLayout>
